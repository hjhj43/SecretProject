<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="secretproject.admin.serviceimpl.AdminMapper">

	<!-- 회원 목록 조회 -->
	<select id="selectUserList" parameterType="userVO" resultType="userVO">
		<include refid="CommonMapper.pagingHead" />
			SELECT 
				USER_ID, 
				USER_NAME, 
				USER_EMAIL, 
				USER_PHONE, 
				USER_AUTH_NUM
			FROM 
				user
		<include refid="CommonMapper.pagingTail" />
	</select>
		
	<!-- 회원정보 삭제 -->
	<delete id="deleteUser" parameterType="String">
		DELETE FROM 
			user
		WHERE
			USER_ID = #{userId}
	</delete>
	
	<select id="getTotCntUser" parameterType="userVO" resultType="int">
		SELECT
			COUNT(*)			
		FROM 
			user
	</select>
</mapper>